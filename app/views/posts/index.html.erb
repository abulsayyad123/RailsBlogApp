
<br>
<%= link_to 'Create Post', new_post_path %>

<table>
	<thead>
		<tr>
			<th>Image</th>
			<th>Title</th>
			<th>Post content</th>
			<th>Time</th>
			<th></th>
		</tr>	
	</thead>
	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td><%= post.image_url %></td>
				<td><%= post.title %></td>
				<td><%= post.post_body %></td>
				<td><%= post.reading_time %></td>
				<td>
					<button><%= link_to 'Edit', edit_post_path(post) %></button>
					<button><%= link_to 'Show', post_path(post) %></button>
					<button><%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></button>
				</td>
			</tr>
		<% end %>		
	</tbody>
</table>